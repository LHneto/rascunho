<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".LanguageActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Idioma"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack" />

    <LinearLayout
        android:id="@+id/languageList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/txtTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="12dp"
            android:background="@drawable/selected_language_border">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_brazil"
                android:contentDescription="Bandeira Brasil"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Portugues"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check"
                android:contentDescription="Selecionado"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_spain"
                android:contentDescription="Bandeira Espanha"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espanhol"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indisponível"
                android:textSize="14sp"
                android:textColor="#AAAAAA"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_korea"
                android:contentDescription="Bandeira Coreia"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coreano"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indisponível"
                android:textSize="14sp"
                android:textColor="#AAAAAA"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_usa"
                android:contentDescription="Bandeira EUA"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ingles"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <!-- Francês -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="20dp"
                android:src="@drawable/flag_france"
                android:contentDescription="Bandeira França"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Francês"
                android:textSize="16sp"
                android:textColor="#888888"
                android:layout_marginStart="40dp"
                android:layout_centerVertical="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indisponível"
                android:textSize="14sp"
                android:textColor="#AAAAAA"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/btnConfig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_settings"
        android:background="@drawable/ic_config_bg"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintMarginEnd="16dp"
        app:layout_constraintMarginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
